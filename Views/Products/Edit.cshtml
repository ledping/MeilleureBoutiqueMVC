@model ProductDto
@{
    ViewData["Title"] = "Modifier un Article | PAMELASTORE";
}

<div class="row">
    <div class="col-md-9 mx-auto rounded-4 border border-pink-subtle shadow-lg p-4 bg-white">
        <h2 class="text-center text-pink mb-5 fw-bold">🛍️ Modification d’un Article</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-semibold text-pink">🔢 Identifiant</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["ProductId"]" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-semibold text-pink">📝 Nom</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-semibold text-pink">🏷️ Marque</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Brand" />
                    <span asp-validation-for="Brand" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-semibold text-pink">📂 Catégorie</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Category">
                        <option value='Other'>Divers</option>
                        <option value='Phones'>Téléphones</option>
                        <option value='Computer'>Ordinateurs</option>
                        <option value='Accessories'>Accessoires</option>
                        <option value='Printers'>Imprimantes</option>
                        <option value='Cameras'>Caméras</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-semibold text-pink">💰 Prix</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" asp-for="Price" min="0" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-semibold text-pink">🧾 Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="offset-sm-4 col-sm-8">
                    <label class="fw-semibold text-pink">📸 Image actuelle :</label><br />
                    <img src="/products/@ViewData["ImageFileName"]" alt="Image produit" class="img-thumbnail" style="max-width: 150px;" />
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label fw-semibold text-pink">🖼️ Nouvelle image</label>
                <div class="col-sm-8">
                    <input type="file" class="form-control" asp-for="ImageFile" />
                    <span asp-validation-for="ImageFile" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label class="col-sm-4 col-form-label fw-semibold text-pink">📅 Date d’ajout</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["CreatedAt"]" />
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid mb-2">
                    <button type="submit" class="btn btn-pink fw-bold shadow">
                        💾 Enregistrer
                    </button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-secondary fw-bold" asp-controller="Products" asp-action="Index">
                        ❌ Annuler
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    .text-pink {
        color: #c2185b;
    }

    .btn-pink {
        background-color: #ec407a;
        color: #fff;
    }

        .btn-pink:hover {
            background-color: #d81b60;
        }

    .border-pink-subtle {
        border-color: #f8bbd0 !important;
    }
</style>
